{
    "manifest_version": 3,
    "name": "Bookmaps",
    "version": "1.0",
    "description": "Bookmark google maps street view locations",
    "author": "Alexsander Bispo <slins312@gmail.com>",
    "homepage_url": "https://github.com/slins-23/",
    "incognito": "spanning",
    "options_ui": {
        "page": "index.html",
        "open_in_tab": true
    },
    "icons": {
        "48": "assets/icons/icon-48.png"
    },
    "permissions": [
        "activeTab",
        "tabs",
        "unlimitedStorage",
        "storage"
    ],
    "host_permissions": [
        "https://api.opencagedata.com/geocode/v1/"
    ],
    "background": {
        "service_worker": "scripts/background/main.js"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.google.com/maps*"
            ],
            "js": [
                "scripts/content/main.js"
            ]
        }
    ],
    "action": {
        "default_icon": "assets/icons/icon-48.png",
        "default_popup": "webpage/popup.html"
    },
    "web_accessible_resources": [
        {
            "resources": ["assets/*"],
            "matches": ["<all_urls>"]
        }
    ]
}